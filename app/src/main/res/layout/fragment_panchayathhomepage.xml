<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homepa"
    tools:context="com.example.panchayathhomepage">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/rep"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/rep"
            android:gravity="bottom"
            android:text="REPORTS"
            android:layout_marginRight="155dp"
            android:layout_marginBottom="100dp"
            android:textColor="#1931B6"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/sup"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintStart_toEndOf="@+id/rep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/supv"
            android:layout_marginBottom="100dp"
            android:gravity="bottom"
            android:text=" Duties"
            android:textColor="#1931B6"
            android:textSize="18dp" />



            <Button
                android:id="@+id/scholar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/scholar"
                android:text="SCHOLARSHIp"
                android:layout_marginRight="155dp"
                android:gravity="bottom"
                android:layout_marginTop="15dp"
                android:textColor="#1D389C"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rep"
                />

           <!-- <Button
                android:id="@+id/audit"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="bottom"
                android:background="@drawable/auditing1"
                app:layout_constraintStart_toEndOf="@+id/scholar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sup"
                android:text="Auditing"
                android:layout_marginTop="15dp"
                android:textColor="#1D389C"
                android:textSize="18dp" />-->

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/auditing1"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@+id/scholar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sup"/>

    </androidx.constraintlayout.widget.ConstraintLayout>







</FrameLayout>