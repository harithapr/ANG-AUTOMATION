<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69D3C8"
    tools:context="com.example.forgotpasswd">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Forgot Your Password?"
            android:textColor="@color/purple_300"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Enter your email to receive an \n otp to reset your password"
        android:textColor="@color/black"
        android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/title"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_lock_24"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="191dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        />
    <EditText
        android:id="@+id/emailforgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email id"
        android:textColor="@color/black"
        android:layout_marginTop="90dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/image"/>
    <Button
        android:id="@+id/forgotbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:background="@drawable/loginbutton"
        app:layout_constraintTop_toBottomOf="@+id/emailforgot"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>