<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEFFFFFF"
    tools:context="com.example.beneficiaries"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="BENEFICIARIES"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/supervisrlnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="180dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/pregnentw"

        android:layout_marginLeft="50dp"
            />

        <Button
            android:id="@+id/pregnentwomen"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#2196F3"
            android:text="Pregnent Women"
            android:textSize="14dp"
            android:layout_marginLeft="50dp"
             />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/child" />

            <Button
                android:id="@+id/children0m3y"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#2196F3"
                android:text="children 6M-3Y"
                android:textSize="14dp"

                />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>